<resources>
    <style name="BoldTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="customMenuButtons" >
        <item name="android:layout_width">290dp</item> 
        <item name="android:layout_height">52dp</item>
        <item name="android:background">@drawable/sign_in_spinner_border</item>
    </style>

    <style name="lightConfirmationMessage">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_24ssp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor" > #808080</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="boldConfirmationMessage">
        <item name="android:paddingBottom">@dimen/_2ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name = "android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
