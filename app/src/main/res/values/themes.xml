<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SafeGuard" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary branding color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary branding color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <!-- Text color. -->
        <item name="android:textColor">@color/colorTextPrimary</item>
        <!-- Custom Button style -->
        <item name="buttonStyle">@style/ButtonStyle</item>
        <!-- Custom EditText style -->
        <item name="editTextStyle">@style/EditTextStyle</item>
    </style>

    <!-- Custom Button style -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/pink</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Custom EditText style -->
    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="boxBackgroundColor">@color/colorBackground</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>